<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="400sp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/list_item_image"/>

    <!-- Download Button -->
    <ImageButton
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_alignParentEnd="true"
        android:layout_margin="3sp"
        android:src="@drawable/btn_download"
        android:id="@+id/list_item_download"
        android:background="?attr/selectableItemBackgroundBorderless"/>

    <!-- Share Button -->
    <ImageButton
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_toLeftOf="@id/list_item_download"
        android:layout_marginEnd="10sp"
        android:src="@android:drawable/ic_menu_share"
        android:id="@+id/list_item_share"
        android:background="?attr/selectableItemBackgroundBorderless"/>

    <!-- Cloud Upload Button -->
    <ImageButton
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_toLeftOf="@id/list_item_share"
        android:layout_marginEnd="10sp"
        android:src="@drawable/baseline_cloud_upload_24"
        android:id="@+id/list_item_upload"
        android:background="?attr/selectableItemBackgroundBorderless"/>
</RelativeLayout>