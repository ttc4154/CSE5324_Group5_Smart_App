<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Capture Button -->
    <Button
        android:id="@+id/captureButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/selectedImageView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:text="Camera" />

    <!-- Gallery Button positioned to the right of Capture Button -->
    <Button
        android:id="@+id/chooseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/captureButton"
        android:layout_below="@id/selectedImageView"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:text="From Gallery" />

    <Button
        android:id="@+id/chooseFromCloudButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/chooseButton"
        android:layout_below="@id/selectedImageView"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:text="From Cloud" />

   <Button
        android:id="@+id/uploadButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
	    android:layout_below="@id/selectedImageView"
        android:layout_marginTop="64dp"
        android:text="Upload Image" />

    <ImageView
        android:id="@+id/selectedImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true" />
    <!-- Bottom Navigation View -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_navigation_menu"
        app:itemIconTint="@android:color/holo_blue_dark"
        app:itemTextColor="@color/color_selector"
        app:labelVisibilityMode="labeled" />
</RelativeLayout>
