<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Add attributes for BottomNavigationView -->
        <item name="bottomNavigationStyle">@style/BottomNavigationStyle</item>
    </style>

    <!-- Custom Bottom Navigation style -->
    <style name="BottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/nav_item_color</item> <!-- Set color for icons -->
        <item name="itemTextColor">@color/nav_item_color</item> <!-- Set color for text -->
    </style>

</resources>
